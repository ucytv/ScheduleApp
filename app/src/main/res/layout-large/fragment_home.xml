<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".Fragments.Home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal"
        android:background="@color/ForestGreen"
        >

        <ImageView
            android:id="@+id/button_home_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="bottom"
            android:layout_margin="40dp"
            android:src="@drawable/icon_menu_white_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:background="@color/green"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/button_my_profile"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/icon_person_white_24"/>

            <ImageView
                android:id="@+id/button_add_plan"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/icon_create_white_24"/>

            <ImageView
                android:id="@+id/button_my_plans"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/icon_clock_white_24"/>

            <ImageView
                android:id="@+id/button_exit_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="40dp"
                android:src="@drawable/icon_exit_white_24" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_my_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        android:background="@drawable/layout_style_1"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="@string/my_profile"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="40dp"
            android:textSize="28sp"/>

        <ImageView
            android:layout_gravity="center"
            android:layout_marginEnd="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile_icon"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_add_plan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="start"
        android:background="@drawable/layout_style_2"
        android:orientation="horizontal">


        <ImageView
            android:layout_marginStart="40dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/schedule"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="@string/add_plan"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:layout_marginStart="40dp"
            android:textSize="28sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_my_plans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        android:background="@drawable/layout_style_3"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/colorAccent"
            android:text="@string/my_profile"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="40dp"
            android:textSize="28sp"/>

        <ImageView
            android:layout_gravity="center"
            android:layout_marginEnd="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/notes"/>
    </LinearLayout>


</LinearLayout>



