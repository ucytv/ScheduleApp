<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/green"
    android:theme="@style/NavTheme"
    android:orientation="vertical"
    android:padding="40dp"
    tools:context=".Fragments.Profile.ProfileFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/button_back_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:background="@drawable/back_icon_white" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:fontFamily="casual"
            android:text="@string/my_profile"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

    </LinearLayout>



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_style"
            android:orientation="vertical"
            android:layout_marginTop="64dp"
            android:padding="20dp">


                <ImageView
                    android:id="@+id/image_avatar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:background="@drawable/circle" />

                <Button
                    android:id="@+id/button_choose_avatar"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textColor="@color/green"
                    android:background="@drawable/button_style"
                    android:textStyle="bold"
                    android:text="@string/choose_avatar"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/name_surname"
                android:textColorHint="@color/colorAccent"
                app:boxStrokeColor="@color/colorAccent"
                app:endIconCheckable="false"
                app:boxStrokeWidth="3dp"
                app:boxStrokeWidthFocused="2dp"
                app:startIconTint="@color/SeaGreen"
                app:startIconDrawable="@drawable/person_icon_black_24"
                app:helperTextTextColor="@color/colorAccent"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/show_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="casual"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:hint="@string/nickname"
                android:textColorHint="@color/colorAccent"
                app:boxStrokeColor="@color/colorAccent"
                app:boxStrokeWidth="3dp"
                app:boxStrokeWidthFocused="2dp"
                app:startIconTint="@color/SeaGreen"
                app:startIconDrawable="@drawable/nick_icon_black_24"
                app:helperTextTextColor="@color/colorAccent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/show_nick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="casual"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:hint="@string/e_mail"
                android:textColorHint="@color/colorAccent"
                app:boxStrokeColor="@color/colorAccent"
                app:boxStrokeWidth="3dp"
                app:boxStrokeWidthFocused="2dp"
                app:startIconTint="@color/SeaGreen"
                app:startIconDrawable="@drawable/mail_icon_black_24"
                app:helperTextTextColor="@color/colorAccent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/show_mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="casual"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_input"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:hint="@string/password"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/SeaGreen"
                android:textColorHint="@color/colorAccent"
                app:boxStrokeColor="@color/colorAccent"
                app:boxStrokeWidth="3dp"
                app:boxStrokeWidthFocused="2dp"
                app:startIconTint="@color/SeaGreen"
                app:startIconDrawable="@drawable/lock_icon_black_24"
                app:helperTextTextColor="@color/colorAccent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/show_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="casual"
                    android:inputType="textPassword"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:hint="@string/phone"
                android:textColorHint="@color/colorAccent"
                app:boxStrokeColor="@color/colorAccent"
                app:boxStrokeWidth="3dp"
                app:boxStrokeWidthFocused="2dp"
                app:startIconTint="@color/SeaGreen"
                app:startIconDrawable="@drawable/phone_icon_black_24"
                app:helperTextTextColor="@color/colorAccent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/show_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="casual"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_update"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:textColor="@color/colorPrimary"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="@string/update"
            android:background="@drawable/button_style"
            android:textAllCaps="true"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/button_cancel"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:textColor="@color/colorPrimary"
            android:text="@string/cancel"
            android:visibility="gone"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:textAllCaps="true"
            android:textStyle="bold"
            />

    </LinearLayout>



</LinearLayout>